<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_centerInParent="true"
    tools:context=".adminModules.AdminPanelSelection">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar17"
        app:title="Admin Selection Panel"
        app:navigationIcon="@drawable/back_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/toolbar17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/adminpanel"
            android:textSize="50sp"
            android:text="Admin Panel"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/round_button"/>
        <Button
            android:layout_marginTop="15dp"
            android:layout_below="@+id/adminpanel"
            android:id="@+id/eventheadpanel"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:textSize="50sp"
            android:text="Event head panel"
            android:background="@drawable/round_button"/>
    </RelativeLayout>

</RelativeLayout>